/* pages/home/home.wxss */
.hot-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 91%;
}

.hot-image {
  margin: 50rpx 0rpx 0;
  width: 450rpx;
  border-radius: 13rpx;
}

.hot-name {
  margin: 80rpx 0rpx 0;
  font-size: 40rpx;
  line-height: 56rpx;
  font-weight: bold;
}

.hot-meta {
  flex: 1;
  margin: 46rpx 0rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hot-avatar {
  flex-shrink: 0;
  width: 70rpx;
  height: 70rpx;
  border-radius: 90rpx;
}

.hot-text {
  padding-left: 18rpx;
  font-size: 35rpx;
  line-height: 46rpx;
}

.home-btn {
  position: fixed;
  bottom: 0;
  display: flex;
  width: 100%;
  height: 8.5%;
  margin-top: 20rpx;
  align-items: center;
  background-color: #fff;
  border-top: 1px solid rgba(151, 151, 151, 0.2);
  border-radius: 13rpx;
}

.toMovieList-opr,.toUser-opr {
  display: flex;
  flex: 1;
  height: 80rpx;
  opacity: 0.7;
  font-size: 32rpx;
  line-height: 44rpx;
  justify-content: center;
  align-items: center;
}

.toMovieList-opr {
  border-right: 1rpx solid rgba(151, 151, 151, 0.2);
}

.toMovieList-icon,.toUser-icon {
  flex-shrink: 0;
  width: 50rpx;
  height: 50rpx;
  padding-right: 10rpx;
}
